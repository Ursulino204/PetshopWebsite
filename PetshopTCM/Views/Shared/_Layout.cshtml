<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-light " style="background-color: #5b1c6c; ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("4Pets", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:#ffd700;" })
            </div>
            @if (Session["usuarioLogado"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home", new
                            {
                       @style = "color:#ffd700;"
                            })
                    </li>
                    <li>
                        @Html.ActionLink("Serviços", "Servico", "Home", new
                        {
                   @style = "color:#ffd700"
                        })
                </li>
                <li>
                    @Html.ActionLink("Consultar", "ConsultarServico", "Home", new
                    {
               @style = "color:#ffd700"
                    })
            </li>

            <li>
                @Html.ActionLink("Pagamento", "Pagamento", "Home", new
                {
           @style = "color:#ffd700"
                })
        </li>


    </ul>

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Logout", "Login", "Login/logout", new
            {
           @style = "color:#ffd700"
            })

        </li>
        <li>
            @Html.ActionLink(@Session["usuarioLogado"].ToString(), "Login", "Login/logout", new
            {
           @style = "color:#ffd700"
            })
        </li>
    </ul>
</div>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        @Html.ActionLink("Login", "Login", "Login")

    </li>
</ul>
}


        </div>


    </div>
    <div class="container body-content">
        @if (Session["usuarioLogado"] != null || HttpContext.Current.Request.AppRelativeCurrentExecutionFilePath.Contains("Login"))
        {
            @RenderBody()
        }
        else
        {
            Context.Response.Redirect("/Login/Login");
        }

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
